<!--  -->
<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" fx:id="ReportTemplate" fx:controller="firea-component-parent/firea-reporttemplate-component/src/main/java/com/dooapp/controller/ReportTemplateController">
	
	<top>
		
		<Label style="-fx-font: NORMAL 20 Tahoma;" text="Enter values for ReportTemplate  Properties" />
		
	</top>
	<center>
		
		<VBox>
			
			<children>
				
				<HBox fx:id="_content" />
				
				<StackPane fx:id="_stack" visible="false">
					
					<children>
						
						<GridPane>
							
							<children>
								
								<Label fx:id="file_label" GridPane.rowIndex="0" GridPane.columnIndex="0" text="file" />
								
								<TextField fx:id="file_data" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="name_label" GridPane.rowIndex="1" GridPane.columnIndex="0" text="name" />
								
								<TextField fx:id="name_data" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="description_label" GridPane.rowIndex="2" GridPane.columnIndex="0" text="description" />
								
								<TextField fx:id="description_data" GridPane.rowIndex="2" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="id_label" GridPane.rowIndex="3" GridPane.columnIndex="0" text="id" />
								
								<TextField fx:id="id_data" GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false" />
								
								<Label fx:id="creationDate_label" GridPane.rowIndex="4" GridPane.columnIndex="0" text="creationDate" />
								
								<TextField fx:id="creationDate_data" GridPane.rowIndex="4" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="updateDate_label" GridPane.rowIndex="5" GridPane.columnIndex="0" text="updateDate" />
								
								<TextField fx:id="updateDate_data" GridPane.rowIndex="5" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="version_label" GridPane.rowIndex="6" GridPane.columnIndex="0" text="version" />
								
								<TextField fx:id="version_data" GridPane.rowIndex="6" GridPane.columnIndex="1" editable="true" />
								
								<Label fx:id="kind_label" GridPane.rowIndex="7" GridPane.columnIndex="0" text="kind" />
								
								<ComboBox fx:id="kind_data" GridPane.rowIndex="7" GridPane.columnIndex="1">
									
									<items>
										
										<FXCollections fx:factory="observableArrayList">
											
											<String fx:value="R13_APSAD" />
											
											<String fx:value="ISO_14520_2006" />
											
											<String fx:value="ISO_14520_2004" />
											
											<String fx:value="NFPA_2008" />
											
											<String fx:value="NFPA_2000" />
											
										</FXCollections>
									</items>
								</ComboBox>
								<Label fx:id="image_label" GridPane.rowIndex="0" GridPane.columnIndex="2" text="image" />
								<!--  -->
								<ComboBox fx:id="image_data" GridPane.rowIndex="0" GridPane.columnIndex="3" onAction="#selectImage" />
								
							</children>
						</GridPane>
					</children>
				</StackPane>
				<StackPane fx:id="_trash" visible="false" />
				
			</children>
		</VBox>
	</center>
	<bottom>
		
		<HBox>
			
			<children>
				
				<Button text="OK" onAction="#handleSubmitButtonAction" cancelButton="false" />
				
				<Button text="Cancel" onAction="#handleCancelButtonAction" cancelButton="false" />
				
			</children>
		</HBox>
	</bottom>
</BorderPane>
