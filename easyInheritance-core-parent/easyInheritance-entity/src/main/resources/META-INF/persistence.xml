<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence"
	version="2.0">

	<persistence-unit name="dooapp" transaction-type="RESOURCE_LOCAL">
		<class>com.dooapp.easyInheritance.entity.ABean</class>
		<class>com.dooapp.easyInheritance.entity.BBean</class>
		<class>com.dooapp.easyInheritance.entity.CBean</class>
		<class>com.dooapp.easyInheritance.entity.DBean</class>
	<!--
		* Start of user code for entities
	  -->
	<!--
		* End of user code for entities
	  -->
 		<properties>
      		<property name="hibernate.max_fetch_depth" value="0" />
      		<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
      		<property name="hibernate.show_sql" value="false" />
      		<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
      		<property name="hibernate.format_sql" value="false" />
			<!--
				* Start of user code for property code
	  		  -->
			<!-- <property name="hibernate.hbm2ddl.auto" value="update"/> -->
		   	<!--
				* End of user codefor property code
	  		  -->
    	</properties>
	</persistence-unit>
</persistence>
